{
  "luci-app-aurora": {
    "description": "Grant access to Aurora theme configuration",
    "read": {
      "uci": ["aurora"],
      "ubus": {
        "luci.aurora": [
          "list_icons",
          "get_installed_versions",
          "check_updates",
          "get_system_info",
          "get_theme_config",
          "get_theme_presets",
          "export_config"
        ],
        "file": ["read", "list", "stat"]
      },
      "file": {
        "/tmp/aurora_icon.tmp": ["read", "write"],
        "/tmp/aurora_config_export.conf": ["read"],
        "/tmp/aurora_downloads/*": ["read", "list"],
        "/www/luci-static/aurora/images/*": ["read", "list"]
      }
    },
    "write": {
      "uci": ["aurora"],
      "ubus": {
        "luci.aurora": [
          "upload_icon",
          "remove_icon",
          "download_package",
          "install_package",
          "reset_defaults",
          "import_config",
          "apply_theme_preset"
        ],
        "file": ["write", "remove", "exec", "stat"]
      },
      "file": {
        "/tmp/aurora_icon.tmp": ["read", "write"],
        "/tmp/aurora_config_import.tmp": ["read", "write", "remove"],
        "/tmp/aurora_downloads/*": ["read", "write", "remove"],
        "/www/luci-static/aurora/images/*": ["read", "write", "remove"]
      }
    }
  }
}
